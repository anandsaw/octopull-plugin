{
  "name": "Octopull",
  "version": "1.0.7",
  "manifest_version": 2,
  "author": "Reinier Hartog",
  "permissions": [
    "https://github.com/*",
    "https://octopull.rmhartog.me/*",
    "storage"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "octopull.css"
      ],
      "js": [
        "octopull.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://octopull.rmhartog.me/*"
      ],
      "css": [
        "extension_installed.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "templates/*.html"
  ]
}