{
  "name": "Octopull",
  "version": "1.0.2",
  "manifest_version": 2,
  "author": "Reinier Hartog",
  "permissions": [
    "https://github.com/*",
    "http://localhost:8080/*",
    "storage"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "octopull.css"
      ],
      "js": [
        "octopull.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "templates/*.html"
  ]
}